                                android:layout_marginRight="20dp"
                                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:backgroundTint="@color/me_gre" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytSwitchUser"
                            android:layout_width="match_parent"
