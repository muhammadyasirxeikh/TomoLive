                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lytimage"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="-50dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
