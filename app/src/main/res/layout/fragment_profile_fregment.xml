                                    android:maxLines="3"
                                    android:paddingHorizontal="10dp"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    tools:text="your bio here" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/grecolor" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/lytfollowrs"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="FANS"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/tvfollowrs"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/lytfollowing"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="FOLLOWING"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:id="@+id/tvfollowing"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/lytcoin"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:visibility="gone"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="COINS"
                                            android:textColor="@color/graydark" />

                                        <TextView
                                            android:id="@+id/tvcoin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pmidum"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/lytwallet"
                            android:layout_width="match_parent"
